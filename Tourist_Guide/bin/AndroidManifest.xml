<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourist_guide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tourist_guide.MainActivity"
             android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tourist_guide.CountryListActivity"
            android:label="@string/title_activity_country_list" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.FamousPlacesListActivity"
            android:label="@string/title_activity_famous_places_list" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.DiscriptionActivity"
            android:label="@string/title_activity_discription" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.CountryListItemActivity"
            android:label="@string/title_activity_country_list_item" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.AboutplaceActivity"
            android:label="@string/title_activity_about_place" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.HotelsActivity"
            android:label="@string/title_activity_hotels" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.FestivalsActivity"
            android:label="@string/title_activity_festivals" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.TravelTipsActivity"
            android:label="@string/title_activity_travel_tips" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.ReviewActivity"
            android:label="@string/title_activity_review" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.WriteYourReviewActivity"
            android:label="@string/title_activity_write_your_review" >
        </activity>
        <activity
            android:name="com.example.tourist_guide.ReadReviewActivity"
            android:label="@string/title_activity_read_review" >
        </activity>
    </application>

</manifest>