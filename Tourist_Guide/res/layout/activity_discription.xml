<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_a"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/footerdis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gsm_developers" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/about"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:background="@android:color/transparent"
            android:onClick="imageButtonPlace"
            android:src="@drawable/aboutplace" />

        <ImageButton
            android:id="@+id/festivasls"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_alignRight="@+id/about"
            android:layout_below="@+id/about"
            android:background="@android:color/transparent"
            android:onClick="festivalDetails"
            android:src="@drawable/festivals_b" />

        <ImageButton
            android:id="@+id/hotels"
            android:layout_width="268dp"
            android:layout_height="58dp"
            android:layout_alignLeft="@+id/festivasls"
            android:layout_below="@+id/festivasls"
            android:background="@android:color/transparent"
            android:onClick="hotelDetails"
            android:src="@drawable/hotels_a" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/traveltips"
            android:layout_below="@+id/traveltips"
            android:background="@android:color/transparent"
            android:onClick="reviewDetails"
            android:src="@drawable/review" />

        <ImageButton
            android:id="@+id/traveltips"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/about"
            android:layout_below="@+id/hotels"
            android:background="@android:color/transparent"
            android:onClick="travelTipsDetails"
            android:src="@drawable/travel" />

    </RelativeLayout>

</RelativeLayout>