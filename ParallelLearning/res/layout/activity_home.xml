<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stmarys.learning.HomeActivity" >

    <TextView
        android:id="@+id/homeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ||Learnign"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
   		android:layout_marginBottom="15dp"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Learn three programming languages C++, Java and C sharp simultaneously by comapring. Test you programming knowledge by taking part in quiz for each tutorial. Unlock interview programs by doing good in the quiz. Try your best to earn a golden badge."
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true" />
    <Button 
        android:id="@+id/startButton"
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        android:hint="Start"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"/>
    <Button 
        android:id="@+id/creditsButton"
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        android:hint="Credit"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>
    
    
    <Button 
        android:id="@+id/achieveButton"
     	android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_alignBottom="@+id/startButton"
        android:hint="Achievements"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"/>

</LinearLayout>
