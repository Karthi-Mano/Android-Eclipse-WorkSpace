import java.awt.Graphics;
import java.util.Vector;

public class Demo {
	
	 public static void main(String[] args) {
		 
		 //Square Coordinates
		 Position sqPos1 = new Position();
		 sqPos1.setX(4);
		 sqPos1.setY(8);
		 Position sqPos2 = new Position();
		 sqPos2.setX(8);
		 sqPos2.setY(12);
		 Position sqPos3 = new Position();
		 sqPos3.setX(8);
		 sqPos3.setY(8);
		 Position sqPos4 = new Position();
		 sqPos4.setX(8);
		 sqPos4.setY(4);
		 
		
		 Square squObj = new Square();
		 squObj.Points = new Vector<Position>();
		 squObj.Points.addElement(sqPos1);
		 squObj.Points.addElement(sqPos2);
		 squObj.Points.addElement(sqPos3);
		 squObj.Points.addElement(sqPos4);
		 //
		 squObj.colorObject.setR(255);
		 squObj.colorObject.setG(0);
		 squObj.colorObject.setB(255);
		
		 
		 squObj.print();
		 
		 
		 //Triangle Coordinates
		 Position triPos1 = new Position();
		 triPos1.setX(2);
		 triPos1.setY(4);
		 
		 Position triPos2 = new Position();
		 triPos2.setX(5);
		 triPos2.setY(6);
		 
		 Position triPos3 = new Position();
		 triPos3.setX(3);
		 triPos3.setY(9);
		 
		 
		 Triangle triangleObj = new Triangle();
		 triangleObj.Points = new Vector<Position>();
		 triangleObj.Points.addElement(triPosition1);
		 triangleObj.Points.addElement(triPosition2);
		 triangleObj.Points.addElement(triPosition3);
		// triangleObj.computeArea();
		 
		 triangleObj.colorObject.setR(0);
		 triangleObj.colorObject.setG(255);
		 triangleObj.colorObject.setB(255);
		 triangleObj.print();
		 

	 }

}
